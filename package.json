{
  "name": "@alanizcreative/static-site-formation",
  "version": "1.3.0-beta.16",
  "description": "Base and helpers for static sites built with json files, Contentful or WordPress",
  "main": "./lib/config/config.js",
  "type": "module",
  "files": [
    "./lib",
    "./cjs"
  ],
  "exports": {
    "./*": {
      "import": "./lib/*",
      "require": "./cjs/*"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build:lib": "tsc",
    "build:cjs": "tsc --moduleResolution node --module commonjs --esModuleInterop --outDir cjs/",
    "build": "npm run build:lib && npm run build:cjs && node build/packageFile.js",
    "test": "vitest --run --reporter verbose --coverage",
    "lint": "npx ts-standard",
    "release": "release-it --preRelease=beta",
    "jsdoc": "jsdoc -c jsdoc.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/galaniz/static-site-formation.git"
  },
  "bugs": {
    "url": "https://github.com/galaniz/static-site-formation/issues"
  },
  "homepage": "https://github.com/galaniz/static-site-formation#readme",
  "author": "Graciela Alaniz (https://alanizcreative.com/)",
  "license": "MIT",
  "devDependencies": {
    "@types/contentful-resolve-response": "^0.1.33",
    "@types/node": "^22.2.0",
    "@types/uuid": "^10.0.0",
    "@types/wordpress__block-serialization-spec-parser": "^3.1.3",
    "@vitest/coverage-v8": "^2.0.5",
    "release-it": "^17.6.0",
    "ts-standard": "^12.0.2",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "dependencies": {
    "@wordpress/block-serialization-spec-parser": "^5.5.0",
    "contentful-resolve-response": "^1.9.0",
    "sharp": "^0.33.4",
    "uuid": "^10.0.0"
  },
  "release-it": {
    "git": {
      "requireCommits": true,
      "commitMessage": "chore: release ${version} [ci skip]"
    },
    "github": {
      "release": true
    }
  },
  "publishconfig": {
    "access": "public"
  }
}
