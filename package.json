{
  "name": "@alanizcreative/static-site-formation",
  "version": "1.3.0-beta.28",
  "description": "Foundation and utilities to build static sites using local JSON files, Contentful, or WordPress.",
  "main": "./lib/config/config.js",
  "packageManager": "pnpm@10.6.2",
  "type": "module",
  "files": [
    "./lib",
    "./cjs"
  ],
  "exports": {
    "./*": {
      "import": "./lib/*",
      "require": "./cjs/*"
    }
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build:lib": "npx tsc --project tsconfig.build.json",
    "build:cjs": "npx tsc --project tsconfig.build.json --moduleResolution node --module commonjs --esModuleInterop --outDir cjs/",
    "build": "pnpm build:lib && pnpm build:cjs && node scripts/packageFile.js",
    "test": "vitest --run --reporter verbose --coverage",
    "lint": "npx eslint .",
    "release": "release-it",
    "release:beta": "release-it --preRelease=beta"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/galaniz/static-site-formation.git"
  },
  "bugs": {
    "url": "https://github.com/galaniz/static-site-formation/issues"
  },
  "homepage": "https://github.com/galaniz/static-site-formation#readme",
  "author": "Graciela Alaniz (https://alanizcreative.com/)",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "4.20250310.0",
    "@types/contentful-resolve-response": "^0.1.33",
    "@types/node": "^22.13.10",
    "@types/uuid": "^10.0.0",
    "@types/wordpress__block-serialization-spec-parser": "^3.1.3",
    "@vitest/coverage-v8": "^3.0.8",
    "eslint": "9.22.0",
    "memfs": "4.17.0",
    "release-it": "^18.1.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "8.26.1",
    "vitest": "^3.0.8"
  },
  "dependencies": {
    "uuid": "^11.1.0"
  },
  "peerDependencies": {
    "@wordpress/block-serialization-spec-parser": "^5.11.0",
    "contentful-resolve-response": "^1.9.0",
    "sharp": "0.33.5"
  },
  "peerDependenciesMeta": {
    "@wordpress/block-serialization-spec-parser": {
      "optional": true
    },
    "contentful-resolve-response": {
      "optional": true
    },
    "sharp": {
      "optional": true
    }
  },
  "release-it": {
    "git": {
      "requireCommits": true,
      "commitMessage": "chore: release ${version} [ci skip]"
    },
    "github": {
      "release": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
